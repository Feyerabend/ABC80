1300 !
1310 ! function routines
1320 !
1330 ! keys
1340 DEF FNGkey LOCAL K,Cu
1350   K=ABS(SYS(8)*INP(34))
1360   IF 97=K AND Cu1<>3 THEN Cu=1
1370   IF 115=K AND Cu1<>1 THEN Cu=3
1380   IF 122=K AND Cu1<>4 THEN Cu=2
1390   IF 119=K AND Cu1<>2 THEN Cu=4
1400   X=R(0) : Y=C(0)
1410   IF Cu=0 Cu=Cu1
1420   ON Cu GOTO 1430,1440,1450,1460
1430   Y=Y-1 : GOTO 1470
1440   X=X+1 : GOTO 1470
1450   Y=Y+1 : GOTO 1470
1460   X=X-1 : GOTO 1470
1470   Cu1=Cu
1480   RETURN 0
1490 FNEND
1500 ! graphics init
1510 DEF FNGinit
1520   ; CHR$(12);
1530   FOR I=0 TO 23
1540     ; CUR(I,0);GWHT;
1550   NEXT I
1560   FOR I=2 TO 79*2
1570     SET DOT 0,I : SET DOT I,79*2
1580   NEXT I
1590   FOR I=0 TO 71
1600     SET DOT I,2 : SET DOT I, 79*2
1610   NEXT I
1620   RETURN 0
1630 FNEND
1640 ! create food
1650 DEF FNGfood
1660   Fx=INT(RND*(Mx-20))+10
1670   Fy=INT(RND*(My-10))+5
1680   RETURN 0
1690 FNEND
1700 ! shift snake
1710 DEF FNshift LOCAL T1,Tr,Tc
1720   T1=Tail-1
1730   Tr=R(T1) : Tc=C(T1)
1740   FOR I=Tail TO 1 STEP -1
1750     R(I)=R(I-1) : C(I)=C(I-1)
1760   NEXT I
1770   R(0)=Tr : C(0)=Tc
1780 RETURN 0
1790 FNEND
1800 ! eat food
1810 DEF FNGeat LOCAL Tx,Ty
1820   Tx=X : Ty=Y
1830   R(Tail)=Tx : C(Tail)=Ty
1840   IF Tail<Smax THEN Tail=Tail+1 ELSE Tail=Smax
1850   Score=Score+1
1860   T=FNGfood
1870   RETURN 0
1880 FNEND
1890 ! move
1900 DEF FNGmove
1910   R(Tail-1)=X : C(Tail-1)=Y
1920   RETURN 0
1930 FNEND
1940 ! test DOT
1950 DEF FNGtest
1960   IF DOT(X,Y) RETURN -1
1970   RETURN 0
1980 FNEND
1990 ! draw
2000 DEF FNGdraw
2010   T=Tail-1
2020   CLR DOT R1,C1
2030   FOR I=0 TO T
2040     SET DOT R(1),C(I)
2050   NEXT I
2060   R1=R(T) : C1=C(T)
2070   SET DOT Fx,Fy
2080   RETURN 0
2090 FNEND
